<div class=" container d-flex flex-wrap justify-content-center p-4">
  {{#each artists}}
  <div class="card m-4" style="width: 18rem;">
    {{#if this.images.[0].url}}
    <img src="{{this.images.[0].url}}" class="card-img-top" alt="...">
    {{else}}
    <img src="/img/no-img.png" class="card-img-top" alt="...">
    {{/if}}
    <div class="card-body text-center">
      <h5 class="card-title">{{this.name}}</h5>
      <p class="card-text">Popularity: {{this.popularity}} <br />Followers: {{this.followers.total}}</p>
      <a href="/albums/{{this.id}}"" class=" btn btn-primary">View Albums</a>
    </div>
  </div>
  {{/each}}
</div>